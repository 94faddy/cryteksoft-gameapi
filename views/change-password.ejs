<%- include('partials/header') %>
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card bg-dark text-light">
            <div class="card-header bg-secondary bg-opacity-25 border-secondary"><h3>เปลี่ยนรหัสผ่าน</h3></div>
            <div class="card-body">
                <form id="changePasswordForm" action="/auth/change-password" method="POST">
                    <input type="hidden" name="username" value="<%= user.username %>" autocomplete="username">
                    
                    <div class="mb-3">
                        <label for="currentPassword" class="form-label">รหัสผ่านปัจจุบัน</label>
                        <input type="password" class="form-control bg-dark text-light" id="currentPassword" name="currentPassword" required autocomplete="current-password">
                    </div>
                    <div class="mb-3">
                        <label for="newPassword" class="form-label">รหัสผ่านใหม่</label>
                        <input type="password" class="form-control bg-dark text-light" id="newPassword" name="newPassword" required autocomplete="new-password">
                    </div>
                    <div class="mb-3">
                        <label for="confirmPassword" class="form-label">ยืนยันรหัสผ่านใหม่</label>
                        <input type="password" class="form-control bg-dark text-light" id="confirmPassword" name="confirmPassword" required autocomplete="new-password">
                    </div>
                    <button type="submit" class="btn btn-primary">ยืนยันการเปลี่ยนแปลง</button>
                    <a href="/dashboard" class="btn btn-outline-light">กลับไปหน้าหลัก</a>
                </form>
            </div>
        </div>
    </div>
</div>
<%- include('partials/footer') %>