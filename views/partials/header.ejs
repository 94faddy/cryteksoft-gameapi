    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">
    
    <!-- Gijgo Datepicker CSS -->
    <link href="https://unpkg.com/gijgo@1.9.14/css/gijgo.min.css" rel="stylesheet" type="text/css" />
    
    <!-- DataTables CSS -->
    <link href="https://cdn.datatables.net/1.12.1/css/dataTables.bootstrap5.min.css" rel="stylesheet">

    <style>
        :root {
            --sidebar-width: 200px;
            --top-navbar-height: 58px;
        }

        /* 1. Flexbox for Sticky Footer */
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            background-color: #151414;
            color: #f8f9fa;
        }

        .wrapper {
            display: flex;
            width: 100%;
            align-items: stretch;
            flex: 1;
        }

        /* 2. Sidebar Styles */
        #sidebar {
            min-width: var(--sidebar-width);
            max-width: var(--sidebar-width);
            background: #212529;
            color: #fff;
            transition: margin-left 0.3s ease-in-out;
        }

        #sidebar.collapsed {
            margin-left: calc(-1 * var(--sidebar-width));
        }

        .sidebar-header {
            padding: 20px;
            background: rgba(255,255,255,0.05);
            text-align: center;
        }

        #sidebar .nav-link {
            padding: 0.8rem 1rem;
            color: rgba(255, 255, 255, 0.7);
        }
        #sidebar .nav-link:hover, #sidebar .nav-link.active {
            color: #fff;
            background: #343a40;
        }
        #sidebar .nav-link .fa-fw {
            width: 2em;
        }

        /* Main Content Area */
        #content {
            width: 100%;
            min-height: 100vh;
        }

        .navbar-top {
            padding: 0.5rem 1rem;
        }
        
        main {
            padding: 20px;
        }

        /* 3. Mobile Specific Styles */
        @media (max-width: 991.98px) {
            #sidebar {
                position: fixed;
                top: 0;
                left: 0;
                height: 100vh;
                z-index: 1045;
                margin-left: calc(-1 * var(--sidebar-width));
            }
            #sidebar.active {
                margin-left: 0;
            }
            .sidebar-overlay {
                display: none;
                position: fixed;
                top: 0; left: 0; width: 100%; height: 100%;
                background: rgba(0, 0, 0, 0.5);
                z-index: 1044;
            }
            .sidebar-overlay.active {
                display: block;
            }
        }

        /* 4. Gijgo Date Picker Dark Theme */
        .gj-picker-bootstrap {
            background-color: #2c3034;
            border: 1px solid #495057;
            color: #f8f9fa;
        }
        .gj-picker-bootstrap thead tr th {
            background-color: #343a40;
            color: #f8f9fa;
            border-bottom: 1px solid #495057;
        }
        .gj-picker-bootstrap .gj-header {
            background-color: #343a40;
            color: #f8f9fa;
        }
        .gj-picker-bootstrap .gj-header .btn-outline-secondary {
            color: #f8f9fa;
            border-color: #6c757d;
        }
        .gj-picker-bootstrap .gj-header .btn-outline-secondary:hover {
            background-color: #6c757d;
        }
        .gj-picker-bootstrap tbody tr td {
            color: #f8f9fa;
            border: 1px solid transparent;
        }
        .gj-picker-bootstrap tbody tr td.disabled {
            color: #6c757d;
        }
        .gj-picker-bootstrap tbody tr td.today {
            border: 1px solid #0d6efd;
        }
        .gj-picker-bootstrap tbody tr td:hover {
            background-color: #495057;
        }
        .gj-picker-bootstrap tbody tr td.active {
            background-color: #0d6efd;
            color: #fff;
        }
        
        /* 5. DataTables Dark Theme */
        .dataTables_wrapper .dataTables_length,
        .dataTables_wrapper .dataTables_filter,
        .dataTables_wrapper .dataTables_info,
        .dataTables_wrapper .dataTables_processing,
        .dataTables_wrapper .dataTables_paginate {
            color: #f8f9fa;
        }
        
        .dataTables_wrapper .dataTables_paginate .paginate_button {
            color: #f8f9fa !important;
        }
        
        .dataTables_wrapper .dataTables_paginate .paginate_button:hover {
            color: #fff !important;
            background: #495057;
            border: 1px solid #495057;
        }
        
        .dataTables_wrapper .dataTables_paginate .paginate_button.current {
            color: #fff !important;
            background: #0d6efd;
            border: 1px solid #0d6efd;
        }
    </style>
</head>
<body>

