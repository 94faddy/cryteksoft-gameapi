<%- include('partials/header') %>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm mb-4 bg-dark text-light">
            <div class="card-header bg-secondary bg-opacity-25 border-secondary">
                <h4 class="mb-0"><i class="fa-solid fa-key"></i> API Key & Secret</h4>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label class="form-label">Username</label>
                    <div class="input-group">
                        <input type="text" class="form-control bg-dark text-light border-secondary" value="<%= user.username %>" readonly>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label">API Key</label>
                    <div class="input-group">
                        <input type="text" class="form-control bg-dark text-light border-secondary" value="<%= user.apikey %>" readonly>
                        <button class="btn btn-outline-light btn-copy" data-clipboard-text="<%= user.apikey %>">คัดลอก</button>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label">Secret Key</label>
                    <div class="input-group">
                        <input type="text" class="form-control bg-dark text-light border-secondary" value="<%= user.secret %>" readonly>
                        <button class="btn btn-outline-light btn-copy" data-clipboard-text="<%= user.secret %>">คัดลอก</button>
                    </div>
                </div>
            </div>
        </div>


        <div class="card shadow-sm bg-dark text-light">
            <div class="card-header bg-secondary bg-opacity-25 border-secondary">
                <h4 class="mb-0"><i class="fa-solid fa-pencil"></i> แก้ไขข้อมูล API</h4>
            </div>
            <div class="card-body">
                <form id="updateApiInfoForm" action="/api/user/update-api-info" method="POST">
                    <div class="mb-3">
                        <label for="ip" class="form-label">IP Address</label>
                        <input type="text" class="form-control bg-dark text-light" id="ip" name="ip" value="<%= user.ip %>" required autocomplete="off">
                        </div>
                    <div class="mb-3">
                        <label for="callback" class="form-label">Callback URL</label>
                        <input type="url" class="form-control bg-dark text-light" id="callback" name="callback" value="<%= user.callback %>" required>
                    </div>
                    <hr class="border-secondary">
                    <div class="mb-3">
                        <label for="currentPassword" class="form-label fw-bold text-danger">ยืนยันรหัสผ่านปัจจุบันของคุณเพื่อบันทึก</label>
                        <input type="password" class="form-control bg-dark text-light" id="currentPassword" name="currentPassword" required placeholder="กรอกรหัสผ่านปัจจุบัน" autocomplete="current-password">
                    </div>
                    <button type="submit" class="btn btn-primary w-100">บันทึกการเปลี่ยนแปลง</button>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>