<%- include('partials/header') %>
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">สร้าง API Key สำหรับ User ใหม่</h1>
</div>
<div class="card shadow-sm">
    <div class="card-body">
        <form id="createUserForm" action="/admin/api/create-user" method="POST">
            <div class="mb-3"><label for="name" class="form-label">Name (ชื่อที่แสดง)</label><input type="text" class="form-control" id="name" name="name" required></div>
            <div class="mb-3"><label for="username" class="form-label">Username (สำหรับ User)</label><input type="text" class="form-control" id="username" name="username" required></div>
            <div class="mb-3"><label for="password" class="form-label">Password (สำหรับ User)</label><input type="password" class="form-control" id="password" name="password" required></div>
            <div class="mb-3"><label for="ip" class="form-label">IP Address</label><input type="text" class="form-control" id="ip" name="ip" required></div>
            <div class="mb-3"><label for="callback" class="form-label">Callback URL</label><input type="url" class="form-control" id="callback" name="callback" required></div>
            <button type="submit" class="btn btn-primary">สร้าง API Key</button>
        </form>
    </div>
</div>
<%- include('partials/footer') %>